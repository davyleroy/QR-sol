<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>QR Solutions</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>qr_solutions</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	
	<!-- Camera permission for QR scanning -->
	<key>NSCameraUsageDescription</key>
	<string>This app needs access to camera to scan QR codes</string>
	
	<!-- Photo library permission for saving QR codes -->
	<key>NSPhotoLibraryAddUsageDescription</key>
	<string>This app needs access to photo library to save QR code images</string>
	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app needs access to photo library to save and share QR code images</string>
	
	<!-- Contacts permission for contact QR generation -->
	<key>NSContactsUsageDescription</key>
	<string>This app needs access to contacts to create QR codes from your contact information</string>
	
	<!-- Location permission for Wi-Fi network detection -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app needs location access to detect Wi-Fi networks for QR code generation</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>This app needs location access to detect Wi-Fi networks for QR code generation</string>
	
	<!-- Microphone permission (might be needed by camera) -->
	<key>NSMicrophoneUsageDescription</key>
	<string>This app may need microphone access for camera functionality</string>
	
	<!-- Face ID permission (for secure storage) -->
	<key>NSFaceIDUsageDescription</key>
	<string>Use Face ID to securely access your encrypted QR codes</string>
	
	<!-- Background modes (if needed for background processing) -->
	<key>UIBackgroundModes</key>
	<array>
		<string>background-processing</string>
	</array>
	
	<!-- App Transport Security settings -->
	<key>NSAppTransportSecurity</key>
	<dict>
		<key>NSAllowsArbitraryLoads</key>
		<true/>
		<key>NSExceptionDomains</key>
		<dict>
			<key>localhost</key>
			<dict>
				<key>NSExceptionAllowsInsecureHTTPLoads</key>
				<true/>
			</dict>
		</dict>
	</dict>
	
	<!-- Supported document types for sharing -->
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>QR Code Image</string>
			<key>CFBundleTypeRole</key>
			<string>Viewer</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>public.image</string>
				<string>public.png</string>
				<string>public.jpeg</string>
			</array>
		</dict>
	</array>
	
	<!-- URL schemes for deep linking -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLName</key>
			<string>qr_solutions</string>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>qrsolutions</string>
			</array>
		</dict>
	</array>
	
	<!-- Status bar appearance -->
	<key>UIStatusBarStyle</key>
	<string>UIStatusBarStyleDefault</string>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	
	<!-- Minimum iOS version -->
	<key>MinimumOSVersion</key>
	<string>12.0</string>
	
	<!-- Localization -->
	<key>CFBundleLocalizations</key>
	<array>
		<string>en</string>
	</array>
	
	<!-- App capabilities -->
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>arm64</string>
	</array>
</dict>
</plist>